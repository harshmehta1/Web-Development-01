         <script>
	var text = "";
	var i;
      (function(){
      function setContent(x) {
      if(x == 1) {
      document.getElementById("para").innerHTML = document.getElementById("click1").innerHTML;;
      }
      if(x == 3) {
      document.getElementById("para").innerHTML = "this is the third thing";
      }
      }

	function linkContent() {
	text = "";
	for (i = 99; i >=96; i--) {
	text += "<p>"+ i + " bottles of beer on the wall, "+ i +" bottles of beer.<br>Take one down, pass it around, "+ (i-1) +" bottles of beer on the wall...</p>";
	}
	document.getElementById("para").innerHTML = text;
	}	    
      var link1 = document.getElementById("link1");
      link1.addEventListener("click",function(){setContent(1);});

      var link2= document.getElementById("link2");
      link2.addEventListener("click",linkContent);

      var link3= document.getElementById("link3");
      link3.addEventListener("click",function(){setContent(3);});


      document.getElementById("body").onload = function(){setContent(1)};
      
      })();
     
    </script>
