<!DOCTYPE html>
<html>
  <head>
    <title> Welome to Task2 of HW2 </title>
    <style>
      .button{
      cursor: pointer;
      }
  </head>
  <body>
    <h1 id ="number">10</h1>
    <button class = "button" type ="button" id ="bttn1"> Alert </button>
    <button class = "button" type = "button" id = "bttn2" > Increment  </button>
    <button class = "button" type = "button" id = "bttn3" > Add Paragraph </button>
    <div id = "para">
    </div>
    <script>
      (function() {
      function alertFunction()  {
      alert(document.getElementById("number").innerHTML);
      }

      var bttn1 = document.getElementById("bttn1");
      bttn1.addEventListener("click", alertFunction);

      function increment() {
      var num = parseInt(document.getElementById("number").innerHTML, 10);
      num++;
      document.getElementById("number").innerHTML = num;
      }

      var bttn2 = document.getElementById("bttn2");
      bttn2.addEventListener("click", increment);

      function addPara() {
      var para = document.createElement("p");
      var text = document.createTextNode(document.getElementById("number").innerHTML);
      para.appendChild(text);
      var div = document.getElementById("para");
      div.appendChild(para);
      }

      var bttn3 = document.getElementById("bttn3");
      bttn3.addEventListener("click", addPara);
      })();
    </script>
  </body>
</html>

